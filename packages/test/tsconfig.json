{
  "include": ["src", "ergo.config.ts"],

  "compilerOptions": {
    "jsx": "react-jsx",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
